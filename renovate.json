{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "labels": [
    "area/dependency"
  ],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "kind/security"
    ]
  },
  "flux": {
    "fileMatch": [
      "apps/.+\\.yaml$",
      "cluster-templates/.+\\.yaml$"
    ]
  }
}
